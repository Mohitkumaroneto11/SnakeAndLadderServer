{
  "name": "socket-server-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && npm run cp",
    "cp": "cpx ./src/middleware/certs/jwt-token.pem dist/middleware/certs/",
    "preserve": "npm run build",
    "serve": "concurrently \"tsc --watch\" \"nodemon -q web/index.js\"",
    "prestart": "npm run build",
    "start": "pm2 reload ludo-server;pm2 logs ludo-server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write",
      "yarn test --watchAll=false --findRelatedTests --bail"
    ]
  },
  "author": "",
